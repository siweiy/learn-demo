#!/bin/bash

if [ $# -lt 1 ] || [ ! -f "$1" ];then
    echo "Usage: ./run  <Compiler.cpp>  <...>"
    exit 1
fi

make D=$1

export LD_LIBRARY_PATH=$(pwd)/../gflags/lib:$LD_LIBRARY_PATH
export LD_LIBRARY_PATH=$(pwd)/../glog/lib:$LD_LIBRARY_PATH
export LD_LIBRARY_PATH=$(pwd)/../gflags/lib:$LD_LIBRARY_PATH
export LD_LIBRARY_PATH=$(pwd)/../googletest/lib:$LD_LIBRARY_PATH
export LD_LIBRARY_PATH=$(pwd)/../libuuid-1.0.3/lib:$LD_LIBRARY_PATH
export LD_LIBRARY_PATH=$(pwd)/../libyuv/lib:$LD_LIBRARY_PATH

str=$1
left=${str:0:-4}

./$left $2
